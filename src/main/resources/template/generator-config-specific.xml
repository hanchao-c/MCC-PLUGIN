<?xml version="1.0" encoding="UTF-8"?>
<generators xmlns="http://www.xxxs.com.cn" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.xxxs.com.cn
	https://raw.githubusercontent.com/hanchao-c/MCC-PLUGIN/master/src/main/resources/template/generator.xsd">
	
	<property name="auth" value="auth_Alice"/>
	<property name="contextTargetPackage" value="com.jlbank.plugin.test"/>
	<property name="mybatisTargetPackage" value="${contextTargetPackage}.repository.mapper"/>
	
	<contextGenerator targetPackage="${contextTargetPackage}" overwrite="true" inUsing="true" >
		<controller suffix="Controller" targetPackage="${contextTargetPackage}.web"/>
		<mock suffix="Mock" targetPackage="${contextTargetPackage}.model.mock" overwrite="false"/>
		<service suffix="Service" targetPackage="${contextTargetPackage}.service"/>
		<serviceImpl suffix="ServiceImpl" targetPackage="${contextTargetPackage}.service.impl"/>
		<repository suffix="Repository" targetPackage="${contextTargetPackage}.repository"/>
		<repositoryImpl suffix="RepositoryImpl" targetPackage="${contextTargetPackage}.repository.impl"/>
	</contextGenerator>
	
	<mybatisGenerator targetPackage="${mybatisTargetPackage}" overwrite="true" inUsing="true">
		<jdbcConnection url="jdbc:mysql://127.0.0.1:3306/plugin_ins" 
						password="root" 
						userName="root"/>
		<model targetPackage="${mybatisTargetPackage}.entity"/>
		<mapper targetPackage="${mybatisTargetPackage}.mapper"/>
		<mapping targetPackage="com.jlbank.plugin.test.m.mapping"/>
	</mybatisGenerator>
	
	<table domainObjectName="MccPluginTest" tableName="mcc_plugin_test"/>
	
</generators>
