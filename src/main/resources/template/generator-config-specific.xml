<?xml version="1.0" encoding="UTF-8"?>
<generators xmlns="http://www.9fbank.com" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.9fbank.com 
	https://raw.githubusercontent.com/hanchao-c/MCC-PLUGIN/master/src/main/resources/template/generator.xsd">
	
	<property name="auth" value="auth_Alice"/>
	<property name="contextTargetPackage" value="com.jlbank.route"/>
	<property name="mybatisTargetPackage" value="${contextTargetPackage}.repository"/>
	
	<contextGenerator targetPackage="${contextTargetPackage}" overwrite="true" inUsing="false" >
		<mock suffix="Mock" targetPackage="${contextTargetPackage}.model" overwrite="false"/>
		<controller suffix="Controller" targetPackage="${contextTargetPackage}.web"/>	
		<service suffix="Service" targetPackage="${contextTargetPackage}.service"/>
		<serviceImpl suffix="ServiceImpl" targetPackage="${contextTargetPackage}.service.impl"/>
		<repository suffix="Repository" targetPackage="${contextTargetPackage}.repository"/>
		<repositoryImpl suffix="RepositoryImpl" targetPackage="${contextTargetPackage}.repository.impl"/>	
	</contextGenerator>
	
	<mybatisGenerator targetPackage="${mybatisTargetPackage}" overwrite="true" inUsing="true">
		<jdbcConnection url="jdbc:mysql://127.0.0.1:3306/plugin_ins" 
						password="root" 
						userName="root"/>
	</mybatisGenerator>
	
	<table domainObjectName="mcc_plugin_test" tableName="MccPlugin_test"/>
</generators>
